<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:名称空间
id：唯一标识
resultType:返回值类型
#{id}:从传递过来的参数取出id值-->
<mapper namespace="com.ad.mapper.CommentMapper">

    <select id="getCommentById" resultType="com.ad.pojo.CommentInfo">
      select * from comment_info where comment_id = #{id}
    </select>

    <select id="getCommentByContent" resultType="com.ad.pojo.CommentInfo">
      select * from comment_info where comment_content like '%' #{content} '%'
    </select>

    <select id="getCommentByPostId" resultType="com.ad.pojo.CommentInfo">
      select * from comment_info where post_id = #{postId}
    </select>

    <select id="getCommentByUserId" resultType="com.ad.pojo.CommentInfo">
      select * from comment_info where user_id = #{userId}
    </select>

    <select id="getCommentByDocId" resultType="com.ad.pojo.CommentInfo">
      select * from comment_info where doc_id = #{docId}
    </select>

    <insert id="addComment" parameterType="com.ad.pojo.CommentInfo" useGeneratedKeys="true" keyProperty="commentId">
      insert into comment_info(post_id,user_id,doc_id,comment_content,comment_type,comment_time)
      values (#{postId},#{userId},#{docId},#{commentContent},#{commentType},#{commentTime})
    </insert>

    <update id="updateComment" parameterType="com.ad.pojo.CommentInfo">
     update comment_info set post_id=#{postId},user_id=#{userId},doc_id=#{docId},comment_content=#{commentContent},comment_type=#{commentType},comment_time=#{commentTime}
     where comment_id = #{commentId}
    </update>

    <delete id="deleteCommentById" >
    delete from comment_info where comment_id=#{id}
    </delete>


</mapper>